doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")

    body
        header
            h1=pageTitle
            nav 
                ul 
                    li
                        a(href="/") HOME
                    li 
                        a(href="/search") SEARCH
                    if !loggedIn
                        li 
                            a(href="/join") JOIN
                        li 
                            a(href="/login") LOGIN
                    else 
                        li 
                            a(href="/videos/upload") UPLOAD
                        li
                            a(href=`/users/${loggedInUser._id}`) PROFILE
                        li
                            a(href="/users/edit") EDIT
                        li
                            a(href="/users/logout") LOGOUT
        main
            block content
    include partials/footer
