extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="name", type="text",required, value=loggedInUser.name, placeholder="이름")
        input(name="email", type="email",required, value=loggedInUser.email, placeholder="이메일")
        input(name="username", type="text",required, value=loggedInUser.username, placeholder="아이디")
        input(name="location", type="text",required, value=loggedInUser.location, placeholder="지역")
        input(type="submit", value="변경하기")